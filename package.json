{
  "name": "youtube-prompt-jump",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build:js": "esbuild src/background.ts src/content.ts src/ui/popup.ts --bundle --outdir=dist --outbase=src --format=esm --target=es2020 --sourcemap",
    "copy": "copyfiles -u 1 public/* dist",
    "build": "npm run clean && npm run build:js && npm run copy",
    "dev": "npm run build:js -- --watch"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.24.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.6.3"
  }
}
